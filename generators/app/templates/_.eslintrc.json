{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "html",
    "promise",
    "import"
  ],
  "globals": {
    "window": true,
    "document": true,
    "fetch": true,
    "Headers": true,
    "Request": true,
    "FormData": true,
    "FileReader": true,
    "localStorage": true
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "promise/catch-or-return": [
      "error"
    ],
    "no-cond-assign": [2, "always"],
    "no-console": 1,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": [2, "functions"],
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": [2, "functions"],
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "curly": [2, "all"],
    "default-case": 0,
    "dot-location": [1, "property"],
    "eqeqeq": [2, "smart"],
    "guard-for-in": 1,
    "no-alert": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-fallthrough": 2,
    "no-lone-blocks": 1,
    "no-loop-func": 2,
    "no-multi-str": 1,
    "no-octal": 1,
    "no-redeclare": 1,
    "no-delete-var": 1,
    "no-undef-init": 1,
    "no-undef": 2,
    "no-unused-vars": 1,
    "array-bracket-spacing": [1, "always", {
      "singleValue": false,
      "objectsInArrays": false
    }],
    "brace-style": [1, "1tbs", {
      "allowSingleLine": true
    }],
    "camelcase": [1, {
      "properties": "always"
    }],
    "comma-spacing": [1, {
      "after": true
    }],
    "comma-style": 1,
    "eol-last": 1,
    "newline-after-var": [1, "always"],
    "no-lonely-if": 1,
    "no-multiple-empty-lines": [1, {
      "max": 2
    }],
    "no-trailing-spaces": [1, {
      "skipBlankLines": false
    }],
    "object-curly-spacing": [1, "always", {
      "arraysInObjects": true,
      "objectsInObjects": true
    }],
    "arrow-parens": [1, "always"],
    "arrow-spacing": [1, {
      "before": true,
      "after": true
    }],
    "constructor-super": 2,
    "no-const-assign": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "prefer-const": 1,
    "prefer-spread": 1,
    "require-yield": 1
  }
}
